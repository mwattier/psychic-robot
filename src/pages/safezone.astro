---
import { BlogCards } from "@modules/BlogCards";
import Layout from "../layouts/Layout.astro";
import { Hero } from "@modules/Hero";
import { HeroSlider2 } from "@static/images";
import { getCollection } from "astro:content";
import { Footer } from "@modules/Footer";

// get all posts from the posts collection
const allPosts = await getCollection("posts");
---

<Layout
    title="Beast Distribution | TPE"
    description="YOUR META DESCRIPTION FOR SEO"
>
    <main class="page-content">
        <Hero
            client:load
            heroType="fullPageSlider"
            data={[
                {
                    subtitle: "Beast Distribution",
                    title: "BRANDS & PRODUCTS",
                    background: HeroSlider2.src,
                    paragraph:
                        "The latest and most profitable in Vape, Delta, SmokeShop products",
                },
            ]}
        />
        {
            allPosts && (
                <BlogCards
                    title="Brands & Categories"
                    description="Beast Distribution"
                    cards={allPosts}
                />
            )
        }
    </main>
    <Footer />
</Layout>
